# Required: Unique crawler identifier (used to build WS URL)
CRAWLER_ID=your-crawler-id

# WebSocket base URL (inside Docker on macOS/Windows, localhost is the container)
# For local dev from container, prefer host.docker.internal
WEBSOCKET_URL=ws://host.docker.internal:8080/ws

# Reconnect interval in milliseconds
WEBSOCKET_RECONNECT_INTERVAL=5000

# Optional: max reconnect attempts (not enforced if omitted)
WEBSOCKET_MAX_RECONNECT_ATTEMPTS=10